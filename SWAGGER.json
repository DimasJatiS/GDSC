{
  "openapi": "3.0.0",
  "info": {
    "title": "Menu Catalog API",
    "version": "1.0.0",
    "description": "REST API for Menu Catalog with Gemini AI integration."
  },
  "servers": [
    {
      "url": "http://localhost:8000/api"
    }
  ],
  "paths": {
    "/menu": {
      "get": {
        "summary": "List menu items",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "category",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "min_price",
            "in": "query",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "max_price",
            "in": "query",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "max_cal",
            "in": "query",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "sort",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of menu items"
          }
        }
      },
      "post": {
        "summary": "Create menu (AI enhanced)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MenuInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Menu created"
          }
        }
      }
    },
    "/menu/{id}": {
      "get": {
        "summary": "Get menu by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Menu found"
          },
          "404": {
            "description": "Not found"
          }
        }
      },
      "put": {
        "summary": "Update menu",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MenuInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Menu updated"
          },
          "404": {
            "description": "Not found"
          }
        }
      },
      "delete": {
        "summary": "Delete menu",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Menu deleted"
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
    "/menu/group-by-category": {
      "get": {
        "summary": "Group menus by category",
        "parameters": [
          {
            "name": "mode",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "per_category",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Grouped result"
          }
        }
      }
    },
    "/menu/search": {
      "get": {
        "summary": "Search menu",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Search result"
          }
        }
      }
    },
    "/menu/ai-suggest": {
      "post": {
        "summary": "AI suggestion for menu",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AISuggestInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "AI suggestion result"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MenuInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "calories": {
            "type": "number"
          },
          "price": {
            "type": "number"
          },
          "ingredients": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "category",
          "calories",
          "price",
          "ingredients",
          "description"
        ]
      },
      "AISuggestInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "ingredients": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "name",
          "ingredients"
        ]
      }
    }
  }
}